@model List<eUseControl.Domain.Entities.User.AdoptieRequest>
@{
     ViewBag.Title = "Cererile Mele de Adopție";
}

<h2>Cererile Mele de Adopție</h2>

@if (Model.Count == 0)
{
     <p>Nu ai trimis nicio cerere de adopție.</p>
}
else
{
     <table class="table table-bordered">
          <thead>
               <tr>
                    <th>Animal</th>
                    <th>Mesaj</th>
                    <th>Data</th>
                    <th>Status</th>
               </tr>
          </thead>
          <tbody>
               @foreach (var cerere in Model)
               {
                    <tr>
                         <td>@cerere.Animal</td>
                         <td>@cerere.Mesaj</td>
                         <td>@cerere.DataCerere.ToShortDateString()</td>
                         <td>
                              @if (cerere.Status == "Acceptat")
                              {
                                   <span class="text-success"><strong>Acceptată</strong></span>
                              }
                              else if (cerere.Status == "Respins")
                              {
                                   <span class="text-danger"><strong>Respinsă</strong></span>
                              }
                              else
                              {
                                   <span class="text-warning"><strong>În așteptare</strong></span>
                              }
                         </td>
                    </tr>
               }
          </tbody>
     </table>
}
