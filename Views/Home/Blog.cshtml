@model IEnumerable<eUseControl.Domain.Entities.User.PostareNoua>
@{
     ViewBag.Title = "Blog";
}
<section class="hero-wrap hero-wrap-2" style="background-image: url('@Url.Content("~/Content/images/bg_2.jpg")');"
         data-stellar-background-ratio="0.5">
     <div class="overlay"></div>
     <div class="container">
          <div class="row no-gutters slider-text align-items-end">
               <div class="col-md-9 ftco-animate pb-5">
                    <p class="breadcrumbs mb-2">
                         <span class="mr-2">
                              <a href="@Url.Action("Index", "Home")">Acasă <i class="ion-ios-arrow-forward"></i></a>
                         </span>
                         <span>Blog <i class="ion-ios-arrow-forward"></i></span>
                    </p>
                    <h1 class="mb-0 bread">Blog</h1>
               </div>
          </div>
     </div>
</section>


<section class="ftco-section bg-light">
     <div class="container-fluid px-5">
          <div class="row justify-content-center mb-5">
               <div class="col-md-10 text-center heading-section">
                  
               </div>
          </div>

          <div class="row">
               @foreach (var post in Model)
               {
                    <div class="col-lg-4 col-md-6 mb-4 d-flex">
                         <div class="blog-entry align-self-stretch w-100" style="box-shadow: 0 0 15px rgba(0,0,0,0.1); border-radius: 10px;">
                              <a href="@Url.Action("BlogSingle", "Home", new { id = post.Id })"
                                 class="block-20 rounded"
                                 style="background-image: url('@Url.Content(post.Imagine)'); height: 250px; background-size: cover; background-position: center;">
                              </a>
                              <div class="text mt-3 px-3 pb-3">
                                   <div class="meta mb-2">
                                        <div>@post.Data.ToString("MMMM dd, yyyy")</div>
                                        <div>Admin</div>
                                        <div><span class="fa fa-comment"></span> 0</div>
                                   </div>
                                   <h3 class="heading">
                                        <a href="@Url.Action("BlogSingle", "Home", new { id = post.Id })">
                                             @post.Titlu
                                        </a>
                                   </h3>
                                   <p>@post.Continut.Substring(0, Math.Min(120, post.Continut.Length))...</p>
                              </div>
                         </div>
                    </div>
               }
          </div>
     </div>
</section>
