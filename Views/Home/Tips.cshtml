@model List<eUseControl.Domain.Entities.User.TipSfat>
@{
     ViewBag.Title = "Sfaturi";
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="hero-wrap hero-wrap-2" style="background-image: url('@Url.Content("~/Content/images/bg_1.jpg")');">
     <div class="container">
          <h1 class="mb-2 bread">Sfaturi</h1>
     </div>
</section>

<section class="ftco-section">
     <div class="container">
          @if (User.IsInRole("Admin"))
          {
               <a href="@Url.Action("Create", "Tips")" class="btn btn-success mb-3">Adaugă sfat</a>
          }

          @foreach (var sfat in Model)
          {
               <div class="card mb-3">
                    <div class="card-body">
                         <p>@sfat.Continut</p>
                         <small class="text-muted">Adăugat de @sfat.Autor la @sfat.DataAdaugarii.ToShortDateString()</small>
                         @if (User.IsInRole("Admin"))
                         {
                              <div class="mt-2">
                                   <a href="@Url.Action("Edit", "Tips", new { id = sfat.Id })" class="btn btn-sm btn-primary">Editează</a>
                                   <a href="@Url.Action("Delete", "Tips", new { id = sfat.Id })" class="btn btn-sm btn-danger">Șterge</a>
                              </div>
                         }
                    </div>
               </div>
          }
     </div>
</section>
